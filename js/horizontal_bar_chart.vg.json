{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 180,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/maheshsuresh1/3179/main/data/top20_uni.csv"
  },
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "University",
      "type": "ordinal",
      "sort": "-x"
    },
    "x": {
      "field": "Total score",
      "type": "quantitative",
      "axis": {"title": "Total Score"}
    },
    "color": {
      "value": "steelblue"
    },
    "text": {
      "field": "b",
      "type": "quantitative"
    }
  }
}
